@page "/Account/Manage/ManageClass"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

@using Microsoft.AspNetCore.Authorization
@using Zeiterfassungssoftware.SharedData.Classes
@attribute [Authorize]

<PageTitle>Manage Class</PageTitle>

    <div class="vertical-center">
        <div class="centered-div-flex">
            <div style="display:flex; justify-content: center; width: fit-content; height: fit-content; background-color: #292929; border-radius: 25px; padding: 20px;">
                <div style="width: 100%;">
                    <p class="activity-edit-title" style="margin:0; padding:0;">Class</p>
                    <div>
                        <select style="width: 100%; height: 100%; @(ClassSource.GetClasses().Count <= 10 ? "scrollbar-width: none" : "")" @bind="@SelectedClass" size="@Math.Clamp(ClassSource.GetClasses().Count, 1, 10)">
                            @foreach(var Class in ClassSource.GetClasses()) {
                                <option value="@Class.Id">@Class.Name</option>
                            }
                        </select>
                    </div>
                    <Button Class="btn-primary classes-button-create" Text="Save" OnClick="UpdateClicked" />
                </div>
            </div>
        </div>
    </div>


